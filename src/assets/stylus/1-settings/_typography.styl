//  Typography
//  ==========================================================================


//  Font sizes
//  --------------------------------------------------------------------------

$fz-h00 = 3rem
$fz-h0  = 2.75rem
$fz-h1  = 2.5rem
$fz-h2  = 2rem
$fz-h3  = 1.75rem;
$fz-h4  = 1.5rem
$fz-h5  = 1.25rem
$fz-h6  = 1.15rem

$font-sizes = {
  'h00' : $fz-h00,
  'h0'  : $fz-h0,
  'h1'  : $fz-h1,
  'h2'  : $fz-h2,
  'h3'  : $fz-h3,
  'h4'  : $fz-h4,
  'h5'  : $fz-h5,
  'h6'  : $fz-h6
}


//  Font Weights
//  --------------------------------------------------------------------------

$fw-x-bold  = 800
$fw-bold    = 700
$fw-s-bold  = 600
$fw-regular = 400
$fw-light   = 300

$font-weights = {
  'x-bold'  : $fw-x-bold,
  'bold'    : $fw-bold,
  's-bold'  : $fw-s-bold,
  'regular' : $fw-regular,
  'light'   : $fw-light
}
