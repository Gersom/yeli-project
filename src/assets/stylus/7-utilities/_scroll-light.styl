.u-scroll-light{
  flex: none;
  height: 12.2rem;
  overflow: auto;
}

.u-scroll-light::-webkit-scrollbar{
  width: 6px;
  border-radius: 3rem;
}
.u-scroll-light::-webkit-scrollbar-button{
  border-radius: 3rem;
}
